{
  "name": "cal.com",
  "description": "cal.com-electron-wrapper",
  "author": "AbbasSrour",
  "version": "0.0.2",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "test": "echo ",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --macos --linux --windows",
    "release": "np"
  },
  "devDependencies": {
    "electron": "^26.2.2",
    "electron-builder": "^24.6.4",
    "np": "^8.0.4",
    "xo": "^0.56.0"
  },
  "np": {
    "publish": false,
    "releaseDraft": false
  },
  "build": {
    "appId": "com.AbbasSrour.cal-wrapper",
    "mac": {
      "category": "public.app-category.social-networking",
      "darkModeSupport": true
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network;Chat"
    }
  }
}
